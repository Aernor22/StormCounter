<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prova.bugad.stormcounter.MainActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llMana"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/llBlue"
                android:weightSum="2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_manablue"
                    android:id="@+id/imgBlueMana"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="0dp">
                    <Button
                        android:textStyle="bold"
                        style="?android:attr/borderlessButtonStyle"
                        android:id="@+id/btnRemoveBlue"
                        android:layout_weight="1.25"
                        android:text="-"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="0"
                        android:id="@+id/lblBlueCount"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:textStyle="bold"
                        android:id="@+id/btnAddBlue"
                        android:layout_weight="1.25"
                        android:text="+"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/llRed"
                android:weightSum="2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_manared"
                    android:id="@+id/imgRedMana"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="0dp">
                    <Button
                        android:textStyle="bold"
                        style="?android:attr/borderlessButtonStyle"
                        android:id="@+id/btnRemoveRed"
                        android:layout_weight="1.25"
                        android:text="-"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="0"
                        android:id="@+id/lblRedCount"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <Button
                        android:textStyle="bold"
                        style="?android:attr/borderlessButtonStyle"
                        android:id="@+id/btnAddRed"
                        android:layout_weight="1.25"
                        android:text="+"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llStormAll"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/llStorm"
                android:weightSum="2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_storm"
                    android:id="@+id/imgStorm"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="0dp">
                    <Button
                        android:textStyle="bold"
                        style="?android:attr/borderlessButtonStyle"
                        android:id="@+id/btnRemoveStorm"
                        android:layout_weight="1.25"
                        android:text="-"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="0"
                        android:id="@+id/lblStormCount"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:textStyle="bold"
                        android:id="@+id/btnAddStorm"
                        android:layout_weight="1.25"
                        android:text="+"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnReset"
                style="?android:attr/borderlessButtonStyle"
                android:src="@mipmap/ic_reset"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
